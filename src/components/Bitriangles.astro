---
const { className = '', twColor = ''} = Astro.props;
const triangleClass = twColor ? twColor : '';
---
<div class= { className, twColor }>
    <div class=`absolute w-0 h-0 border-t-[20px] border-solid border-b-transparent border-r-[30px] border-t-transparent border-b-[20px] right-0 top-1/2 translate-y-[-50%] border-l-0 ${triangleClass}`>
    </div>
    <slot/>
    <div class=`absolute w-0 h-0 border-t-[20px] border-solid border-b-transparent border-l-[30px] border-t-transparent border-b-[20px] left-0 top-1/2 translate-y-[-50%] border-r-0 ${triangleClass}`>
    </div> 
</div>