---
import '../../styles/global.css';
import Header from "../../components/sections/Header.astro";
import Footer from '../../components/sections/Footer.astro';
import Layout from '../../layouts/Layout.astro';
import InputSearch from '../../components/InputSearch.astro';
import BookDatalist from '../../components/BookDatalist.astro';
const title = Astro.url.searchParams.toString();
---
<Layout title = {title}>
    <Header />
    <main>
        <div
            class=" rounded-sm p-2 flex flex-col items-center justify-center gap-1"
        >
            <InputSearch 
                id='search'
                name='search'
                placeholder='Search some books...'
                list='books'
            />
            <span 
                id="searchReadout"
                class="font-bold"
            >
            </span>
        </div>
        <section 
            aria-label="Search Results"
            class="flex justify-center"    
        >
            <ul 
                id="resultsList"
                class="flex flex-col gap-1 sm:gap-2"
            >
            </ul>
        </section>
    </main>
    <Footer />
</Layout>
<BookDatalist 
    id="books"
/>
<script src="./script.ts"></script>